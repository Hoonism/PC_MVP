rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Chats collection rules
    match /chats/{chatId} {
      // Allow read if user is authenticated and owns the chat
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow create if user is authenticated and setting their own userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow update if user owns the chat
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow delete if user owns the chat
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Storybooks collection rules
    match /storybooks/{storybookId} {
      // Allow read if user is authenticated and owns the storybook
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow create if user is authenticated and setting their own userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow update if user owns the storybook
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow delete if user owns the storybook
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // User profiles collection rules (if you add this later)
    match /userProfiles/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
